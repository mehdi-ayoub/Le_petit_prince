<div class="banner">
 <div class="container">
  <div class="title-page" style="margin-top: 1rem ; margin-left: 2rem;"><h1>My Planets</h1></div>
  </div>
</div>

 <div class="bg-blue">
  <div class="container new-planet">
   <div class="card" style="width: 30rem; margin: 0 auto ; margin-top: 3rem ; margin-bottom: 3rem ;">
    <div class="card-header" style="margin-top: 1rem">
    </div>
    <div class="row justify-content-between">
     <div class="col-xs-12 col-sm4 col-sm-offset-4 col-md-12 col-lg-12">
      <div class="d-flex justify-content-center">
       <div class="position-relative">
        <span class="border-200" mb-3></span>
         <%= image_tag "blue_planet.jpg", class: "card-img-top" %>
          <div class="card-body">
           <h4 class="card-title" style="margin-bottom: 0.75rem">Add your planet</h4>
            <div class="row align-items-start">
             <div class="form-inputs">
              <%= simple_form_for @planet do |f| %>
              <%= f.input :title %>
              <%= f.input :description %>
              <%= f.input :spaceport,
              input_html: {data: {spaceport_autocomplete_target: "spaceport"}, class: "d-none"},
              wrapper_html: {data: {controller: "spaceport-autocomplete", spaceport_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
              <%= f.input :renting_price %>
              <%= f.association :category %>
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <%= f.submit "Add Planet", class: "btn btn-primary btn-width"%>
              </div>
              <% end %>
            </div>
          </div>
        </div>
     </div>
   </div>
 </div>
</div>
</div>
